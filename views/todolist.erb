    <h1>to do / not to do :</h1>
    
    <ul id="todo-list" class="unstyled">
      <% @items.each do |item| %>
      <li id="<%= item[:id] %>">
      <span class="item">
      <%= item[:done] ? "<del>#{item[:content]}</del>" : item[:content] %>
      </span>
      <span class="pull-right">
    
      <a href="/delete/<%= item[:id] %>" class="btn btn-danger">Non</a>
      </span>
      </li>
      <% end %>
    </ul>

    <form action="/todolist" class="form-inline" method="POST">
      <input type="text" placeholder="to do item :" name="content">
      <button type="submit" class="btn">Post!</button>
    </form>


